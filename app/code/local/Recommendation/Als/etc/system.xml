<?xml version="1.0" encoding="UTF-8" ?>

<config>
    <tabs>
        <recommendation translate="label" module="recommendation_als">
            <label>Recommendation</label>
            <sort_order>1000</sort_order>
        </recommendation>
    </tabs>
    <sections>
        <recommendation_als translate="label" module="recommendation_als">
            <label>Als</label>
            <tab>recommendation</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <!-- Configurações Gerais -->
                <settings_general translate="label" module="recommendation_als">
                    <label>Configurações Gerais</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>5</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable translate="label">
                            <label>Habilitar Algoritmo</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable>
                        <qty_registrys_cicle translate="label">
                            <label>Número de recomendações por ciclo</label>
                            <frontend_type>text</frontend_type>
                            <comment>Informe a quantidade de registros por ciclo de cron</comment>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </qty_registrys_cicle>
                        <template_id translate="label">
                            <label>Informe o template de email</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </template_id>
                        <name_sale translate="label">
                            <label>Informe o nome da loja</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </name_sale>
                        <email_sale translate="label">
                            <label>Informe o email da loja</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>25</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </email_sale>
                    </fields>
                </settings_general>
            </groups>
        </recommendation_als>
    </sections>
</config>